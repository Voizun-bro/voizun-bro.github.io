---
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';
import dynamic from 'astro/dynamic';

const YouTube = dynamic(() => import('astro-embed').then(mod => mod.YouTube), {
  loading: () => <p>Loading YouTube video...</p>
});

const Tweet = dynamic(() => import('astro-embed').then(mod => mod.Tweet), {
  loading: () => <p>Loading Tweet...</p>
});

const posts = (await getCollection('blog')).sort(
  (a: CollectionEntry<"blog">, b: CollectionEntry<"blog">) => b.data.date.valueOf() - a.data.date.valueOf()
);

const featuredPosts = posts.slice(0, 3);
---

<BaseLayout title="Welcome to My Blog">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Hero Section -->
    <div class="py-12 sm:py-16">
      <div class="text-center">
        <h1 class="text-4xl font-extrabold text-gray-900 dark:text-white sm:text-5xl md:text-6xl">
          Welcome to My <span class="text-primary">Blog</span>
        </h1>
        <p class="mt-3 max-w-md mx-auto text-base text-gray-500 dark:text-gray-400 sm:text-lg md:mt-5 md:text-xl md:max-w-3xl">
          Exploring technology, design, and everything in between. Join me on this journey of discovery and learning.
        </p>
      </div>
    </div>

    <!-- Featured Posts -->
    <div class="py-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Featured Posts</h2>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {featuredPosts.map((post: CollectionEntry<"blog">) => (
          <article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transition-shadow hover:shadow-xl">
            <Image
              src={post.data.image}
              alt=""
              width={800}
              height={400}
              loading="lazy"
              class="w-full h-48 object-cover"
            />
            <div class="p-6">
              <time class="text-sm text-gray-500 dark:text-gray-400">
                {new Date(post.data.date).toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
              <h3 class="mt-2 text-xl font-semibold text-gray-900 dark:text-white">
                {post.data.title}
              </h3>
              <p class="mt-3 text-base text-gray-500 dark:text-gray-400">
                {post.data.excerpt}
              </p>
              <a
                href={`/blog/${post.slug}`}
                class="mt-4 inline-flex items-center text-primary hover:text-primary-dark"
              >
                Read more
                <svg
                  class="ml-2 w-4 h-4"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 5l7 7-7 7"
                  />
                </svg>
              </a>
            </div>
          </article>
        ))}
      </div>
    </div>

    <!-- Embedded Content -->
    <div class="py-12">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Featured Content</h2>
      <div class="grid gap-8 md:grid-cols-2">
        <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg p-6">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Featured Video</h3>
          <YouTube id="HkTihNKCWFA" />
        </div>
        <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg p-6">
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Latest Tweet</h3>
          <Tweet id="1855762463121457420" />
        </div>
      </div>
    </div>
  </div>
</BaseLayout>