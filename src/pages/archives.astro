---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';

interface BlogPost {
  slug: string;
  data: {
    title: string;
    date: Date;
    category: string;
    image: string;
  };
}

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const postsByYear = posts.reduce((acc: Record<number, BlogPost[]>, post) => {
  const year = new Date(post.data.date).getFullYear();
  if (!acc[year]) {
    acc[year] = [];
  }
  acc[year].push(post);
  return acc;
}, {});

const years = Object.keys(postsByYear).sort((a, b) => Number(b) - Number(a));
---

<BaseLayout title="Archives">
  <div class="max-w-4xl mx-auto">
    {years.map((year) => (
      <section class="mb-12">
        <h2 class="text-3xl font-bold mb-6">{year}</h2>
        <div class="space-y-4">
          {postsByYear[Number(year)].map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="group flex items-center gap-4 p-4 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800"
            >
              <Image
                src={post.data.image}
                alt=""
                width={80}
                height={80}
                class="rounded-lg object-cover"
              />
              <div class="flex-1">
                <h3 class="text-xl font-semibold group-hover:text-primary">
                  {post.data.title}
                </h3>
                <time class="text-sm text-gray-600 dark:text-gray-400">
                  {new Date(post.data.date).toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                  })}
                </time>
              </div>
              <span class="px-3 py-1 text-sm rounded-full bg-gray-100 dark:bg-gray-800">
                {post.data.category}
              </span>
            </a>
          ))}
        </div>
      </section>
    ))}
  </div>
</BaseLayout>
