---
// Navigation.astro
import { Home, Archive, Search, Link, Moon } from 'lucide-react';

const navigation = [
  { name: 'Home', href: '/', icon: Home },
  { name: 'Archives', href: '/archives', icon: Archive },
  { name: 'Search', href: '/search', icon: Search },
  { name: 'Links', href: '/links', icon: Link },
];
---

<nav class="hidden md:flex flex-col w-64 p-4 border-r border-gray-200 dark:border-gray-800">
  <div class="space-y-4">
    {navigation.map((item) => (
      <a
        href={item.href}
        class="flex items-center gap-2 px-3 py-2 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800"
      >
        <item.icon className="w-5 h-5" />
        <span>{item.name}</span>
      </a>
    ))}
  </div>
</nav>

<div class="md:hidden">
  <button
    id="menu-toggle"
    class="fixed top-4 right-4 z-50 p-2 rounded-lg bg-gray-100 dark:bg-gray-800"
  >
    <span class="sr-only">Open menu</span>
    <svg
      class="w-6 h-6"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"
      />
    </svg>
  </button>
</div>

<script>
  const menuToggle = document.getElementById('menu-toggle');
  const nav = document.querySelector('nav');

  menuToggle?.addEventListener('click', () => {
    nav?.classList.toggle('hidden');
  });
</script>
