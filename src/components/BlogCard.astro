---
// BlogCard.astro
interface Props {
  title: string;
  description: string;
  date: Date;
  readingTime: string;
  category: string;
  image: string;
  url: string;
}

const { title, description, date, readingTime, category, image, url } = Astro.props;
const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: '2-digit',
});
---

<article class="group relative rounded-lg overflow-hidden bg-gray-100 dark:bg-gray-800 hover:shadow-lg transition-shadow">
  <a href={url} class="block">
    <img
      src={image}
      alt=""
      class="w-full aspect-[21/9] object-cover"
    />
    <div class="p-6">
      <div class="flex items-center gap-2 mb-4">
        <span class="px-3 py-1 text-sm rounded-full bg-emerald-100 dark:bg-emerald-900 text-emerald-800 dark:text-emerald-100">
          {category}
        </span>
      </div>
      <h2 class="text-2xl font-bold mb-2 group-hover:text-primary">
        {title}
      </h2>
      <p class="text-gray-600 dark:text-gray-400 mb-4">
        {description}
      </p>
      <div class="flex items-center gap-4 text-sm text-gray-600 dark:text-gray-400">
        <time datetime={date.toISOString()}>
          {formattedDate}
        </time>
        <span>{readingTime} read</span>
      </div>
    </div>
  </a>
</article>
